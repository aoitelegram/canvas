{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "ES2020",
        "strict": true,
        "tsBuildInfoFile": "./__cache__/.tsbuildinfo",
        "paths": {
            "@classes/*": ["./src/classes/*"],
            "@functions/*": ["./src/utils/functions/*"]
        },
        "strictNullChecks": false,
        "types": []
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./dist",
        "./__test__"
    ]
}